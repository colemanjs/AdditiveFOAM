topSurface
{
    type            surfaces;
    libs            ("libsampling.so");

    surfaceFormat   raw;

    fields          ( T alpha.solid );

    interpolationScheme cellPoint;

    surfaces
    (
        top
        {
            type            patch;
            patches         ( "top" );
        }
    );
}

