surfaces
{
    type            surfaces;
    libs            ("libsampling.so");
    writeControl    writeTime;

    surfaceFormat   vtk;
    writeFormat     ascii;
    fields          (T);

    interpolationScheme cellPoint;

    surfaces
    (
        liquidus
        {
            type            isoSurface;
            isoField        T;
            isoValue        1709;
            interpolate     true;
        }
    );
}

